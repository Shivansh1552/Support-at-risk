<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <meta http-equiv='X-UA-Compatible' content='IE=edge'>
        <title>amity_project</title>
        <meta name='viewport' content='width=device-width, initial-scale=1'>
        <link rel="stylesheet" href="public/todo.css"
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    </head>
    <body>
        <%- include("./partials/navbar") -%>

            <div class="whole_Container">
                <div class = "container" style="width:43%">
                    <h1 style="text-align: center;border-bottom: 1px solid grey; padding-bottom: 20px;margin-bottom: 0px;">Item</h1>
                    <form action="order/create-list" method="POST">
                        <div class="form1">
                            <span style="margin-left: 10px;margin-top:20px; color: gray;font-weight: bold;">ITEM NAME</span> <br>
                            <input  style="background:transparent;border: 1px solid transparent;outline: none;width: 100%; height: 25px;margin-left: 10px;" class="desc" type="text" name="item" placeholder="What item you want?" required>
                        </div>
                        <div class="contain">
                            <div class="form2">
                                <span style="margin-left: 10px;margin-top:20px; color: gray;font-weight: bold;">COMPANY NAME</span>  <br>
                                <input style="background:transparent;border: 1px solid transparent;outline: none;width: 90%; height: 35px;margin-left: 10px;"
                                 class="catg" type="text" name="company" placeholder="Which company?" required>
                            </div>
                            <div class="form3">
                                <span style="margin-left: 20px;margin-top:20px; color: gray;font-weight: bold;">
                                QUANTITY</span> <br>
                                <input style="background:transparent;border: 1px solid transparent;outline: none;width: 90%; height: 35px;margin-left: 20px;"
                                 class = "catg" type="text" name="quantity">
                            </div>
                        </div>
                        <button type="submit" class = "btn1" >+ ADD ITEM</button>
                    </form>
                </div>

                <div class="cl">
                    <h1 style="text-align: center;border-bottom: 1px solid grey; padding-bottom: 20px;margin-bottom: 0px;">Items List</h1>
                    <ul class="list">
                        <% for(let i of lists) {%>
                            <li>
                              <% if(i.author._id.equals(currentUser._id)){ %>
                                <p><%= i.item %></p>
                                <p><%= i.company %></p>
                                <div class="del" >
                                  <a class="delete" href="/order/delete-list/?id=<%= i._id%>">
                                      <!-- <i class="far fa-trash-alt" style="color: red;"></i> -->
                                    X
                                  </a>
                                </div>
                                <br>
                                <p><%= i.quantity %></p>
                              <% } %>
                            </li>
                        <%}%>
                    </ul>
                </div>
            </div>
    </body>
</html>
